<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/city_screen">

    <fragment
        android:id="@+id/city_screen"
        android:name="com.yeyq.weather.features.city.presentation.CityFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_city">
        <action
            android:id="@+id/action_navigate_from_city_screen_to_day_details_fragment"
            app:destination="@id/day_screen"
            app:popUpTo="@id/city_screen" />
    </fragment>

    <fragment
        android:id="@+id/day_screen"
        android:name="com.yeyq.weather.features.dayDetails.presentation.DayDetailsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_day" />

</navigation>